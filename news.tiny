a1f1c5d0-940e-593f-3954-d656e3ab20e2.title	"Save Our Libraries"
a1f1c5d0-940e-593f-3954-d656e3ab20e2.author	"Piers Cawley"
a1f1c5d0-940e-593f-3954-d656e3ab20e2.categories	["music","folk","protestsong","repertoireproject","savelibraries","saveourlibraries","unaccompanied"]
