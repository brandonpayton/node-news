cdb3e124-353e-fcac-0d91-7db31b748079.title	"Turing"
cdb3e124-353e-fcac-0d91-7db31b748079.author	"Piers Cawley"
cdb3e124-353e-fcac-0d91-7db31b748079.categories	["musings","the-practice-of-programming"]
