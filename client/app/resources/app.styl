@import '../../dijit/themes/tundra/tundra.css'
@import '../../dgrid/css/dgrid.css'

// NOTE: Intentionally omitting a global-reset so feed article HTML renders with default styles. We'll see how it goes.

html,
body,
.news-app 
    width: 100%
    height: 100%
    margin: 0
    overflow: hidden
    font-family: sans-serif
    font-size: 0.95em

.feedPropertiesDialog label
    display: block
    margin-left: auto
    text-align: right


.feedPropertiesDialog .controlContainer 
    width: 20em
    display: inline-block
    text-align: left

.feedPropertiesDialog .dijitTextBox 
    margin-right: auto

.feedPropertiesDialog .controlContainer .dijitTextBox
    width: 100%

.dialogButtons
    text-align: center

article header.unread
    font-weight: bold

.dgrid
    border: 0
    border-collapse: collapse
    width: 100%
    height: 100%

    .dgrid-row, .dgrid-cell
        border: 0

.feed-list, .article-list
    border-collapse: collapse
    width: 100%
    height: 100%

    .dgrid-scroller
        margin: 0
        overflow-y: auto

.feed-list
    .dgrid-cell
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
    overflow: auto;
.article-list
    .dgrid-row
        width: 100%
        border-bottom: 1px solid green

        header
            background-color: #DDD
            padding: 0.4em
        header > h1
            display: inline

        .date
            float: right

        .content
            display: none

            h1
                margin-top: 0.2em
                margin-bottom: 0.2em
                font-size: large

            .author:before
                content: "by "
            .author
                display: block
                font-size: small

    .dgrid-row.open
        .content 
            display: block
            overflow: auto
            padding: 0.5em;
        

