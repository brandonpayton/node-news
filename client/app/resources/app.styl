@import '../../dijit/themes/claro/claro.css'
@import '../../dgrid/css/dgrid.css'

// NOTE: Intentionally omitting a global-reset so feed article HTML renders with default styles. We'll see how it goes.

html,
body,
.news-app 
    width: 100%
    height: 100%
    margin: 0
    overflow: hidden
    font-family: sans-serif
    font-size: 0.95em

.feedPropertiesDialog
    padding: 0.3em 1em

    label
        display: block
        margin-left: auto
        text-align: right
        margin-bottom: 0.45em

    .controlContainer 
        width: 20em
        display: inline-block
        text-align: left

    .dijitTextBox 
        margin-right: auto

    .controlContainer .dijitTextBox
        width: 100%

    .dialog-buttons
        text-align: center
        margin-top: 1em

.feed-pane
    .title
        display: inline-block
        font-size: large
        font-style: italic
    .subscribe-button
        float: right
    .title, .subscribe-button
        margin: 0.3em

.dgrid
    border: 0
    border-collapse: collapse
    width: 100%
    height: 100%

    .dgrid-row, .dgrid-cell
        border: 0

.feed-list, .article-list
    border-collapse: collapse
    width: 100%
    height: 100%

    .dgrid-scroller
        margin: 0
        overflow-y: auto

.feed-list
    .dgrid-cell
        cursor: default
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
    overflow: auto;

.article-list
    .dgrid-row
        width: 100%
        border-bottom: 1px solid green

        >header
            cursor: pointer
        header
            background-color: #DDD
            padding: 0.4em
        header > h1
            display: inline
        header.unread
            font-weight: bold

        .date
            float: right

        .content
            display: none

            h1
                margin-top: 0.2em
                margin-bottom: 0.2em
                font-size: large

            .author
                display: block
                font-size: small
                font-style: italic
            .author:before
                content: "by "
            .author:empty
                display: none

    .dgrid-row.open
        .content 
            display: block
            overflow: auto
            padding: 0.5em;
        

