@import '../../dijit/themes/tundra/tundra.css'
@import '../../dgrid/css/dgrid.css'

@import 'nib'

global-reset()

html,
body,
.news-app 
    width: 100%
    height: 100%
    margin: 0
    overflow: hidden

.feedPropertiesDialog label
    display: block
    margin-left: auto
    text-align: right


.feedPropertiesDialog .controlContainer 
    width: 20em
    display: inline-block
    text-align: left

.feedPropertiesDialog .dijitTextBox 
    margin-right: auto

.feedPropertiesDialog .controlContainer .dijitTextBox
    width: 100%

.dialogButtons
    text-align: center

article header.unread
    font-weight: bold

.dgrid
    border-collapse: collapse
    width: 100%
    height: 100%

.feed-list, .article-list
    border-collapse: collapse
    width: 100%
    height: 100%

    .dgrid-scroller
        margin: 0

article
    width: 100%
    border-bottom: 1px solid green

    header
        background-color: #DDD
        padding: 0.4em
    header > h1
        display: inline

    .date
        float: right

    .content
        display: none

        h1
            font-size: large

        .author:before
            content: "by "
        .author
            display: block
            font-size: small
        font-size: small

article.open .content 
    display: block

